<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1 mt-5">
<h3>投稿</h3>
<%= form_with model: @post, url: posts_path, method: :post do |f| %>
  <h4>タイトル</h4>
  <%= f.text_field :title %>

  <h4>本文</h4>
  <%= f.text_area :body %>

  <%= f.submit '投稿' %>
<% end %>
    </div>
  </div>
</div>