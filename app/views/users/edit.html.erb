<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 offset-md-1 mt-5">
      <h3>編集画面</h3>
        <%= form_with model: @user do |f| %>
          <h4>名前</h4>
        <%= f.text_field :name %>
        <%= f.submit '保存する', class: 'btn btn-info rounded-pill' %>
        <% end %>
        <%= link_to "詳細ページに戻る", user_path(@user.id), class: "btn btn-info rounded-pill" %>
    </div>
  </div>
</div>